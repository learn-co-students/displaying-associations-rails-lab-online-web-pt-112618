<h1>One Artist</h1>
<h2>Name: <%= @artist.name %></h2>
<h3><%= pluralize(@artist.song_count, 'Song') %></h3>

<ul>
<% @artist.songs.each do |song| %>
    <li><%= link_to song.title.titlecase, song_path(song) if @artist.songs %></li>
<% end %>
</ul>

<%= link_to "Add New Song", new_song_path(@artist.songs) %>
